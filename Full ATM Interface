#include <iostream>
#include <string>
#include <cmath>

int main(){
double Cash = 10000;
int Main_Choice;
float deposit_choice;
double withdraw_choice;

while (Main_Choice!=4){
std::cout<<"------------ATM MACHINE-------------"<<std::endl;
std::cout<<"1-Check Balance"<<std::endl;
std::cout<<"2-Deposit Money"<<std::endl;
std::cout<<"3-Withdraw Money"<<std::endl;
std::cout<<"4-Exit"<<std::endl;
std::cout<<"Enter Your Choice:"<<std::endl;
std::cin>>Main_Choice;

 switch(Main_Choice){

    case 1: 
     std::cout<<" "<<Cash<<std::endl;
     std::cout<<std::endl<<std::endl;
      std::cout<<std::endl<<std::endl;
    break;
     case 2:
    int deposit_choice;
    std::cout<<"What amount do you want to deposit?"<<std::endl;
    std::cin>>deposit_choice;
    std::cout<<"Thank you, your current bank balance is: "<<Cash+deposit_choice<<std::endl;
     std::cout<<std::endl<<std::endl;
      std::cout<<std::endl<<std::endl;
    break;
     case 3:
    std::cout<<"What amount do you want to withdraw?"<<std::endl;
    std::cout<<std::endl<<std::endl;
    std::cout<<"-->2000"<<std::endl;
    std::cout<<"-->4000"<<std::endl;
    std::cout<<"-->6000"<<std::endl;
    std::cout<<"-->8000"<<std::endl;
    std::cout<<"-->10000"<<std::endl;
    std::cout<<std::endl<<std::endl;
    std::cout<<std::endl<<std::endl;
    std::cout<<"What amount do you want to withdraw?"<<std::endl;
    std::cin>>withdraw_choice;
    std::cout<<std::endl<<std::endl;
    std::cout<<"Thank you for visiting, your current bank balance is: "<<Cash-withdraw_choice<<std::endl;
    std::cout<<std::endl<<std::endl;
    std::cout<<std::endl<<std::endl;
    break;
    case 4:
    std::cout<<"Thanks for Visiting us. "<<std::endl;
     std::cout<<std::endl<<std::endl;
      std::cout<<std::endl<<std::endl;
    break;
    default:
     std::cout<<"Invalid Input"<<std::endl;
     std::cout<<std::endl<<std::endl;
      std::cout<<std::endl<<std::endl;
    break;
}
}
    return 0;
}
