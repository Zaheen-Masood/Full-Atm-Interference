#include<iostream>
#include<string>
using namespace std;
int main (){

 string driving_license;
 int age;

 cout<<"Enter your age: "<<endl;
 cin>>age;

 if (age>=18){

  cout<<"Do you have a driving licence? (yes or no)"<<endl;
  cin>>driving_license;

 if(driving_license== "YES" || driving_license== "yes" || driving_license == "Yes"){

    cout<<"You can drive legally"<<endl;
 }
 else{

    cout<<"You, must apply for an ID. Urgently!!!"<<endl;
 }



 }else{
    cout<<"Your not elegible to drive"<<endl;
 }

return 0;
}

